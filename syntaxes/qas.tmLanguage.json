{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "qas",
  "patterns": [
    {
      "include": "#qas-comments"
    },
    {
      "include": "#qas-code-block"
    },
    {
      "include": "#qas-plus"
    },
    {
      "include": "#qas-at"
    },
    {
      "include": "#qas-boolean"
    },
    {
      "include": "#qas-keywords"
    },
    {
      "include": "#qas-text"
    }
  ],
  "repository": {
    "qas-comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign",
          "match": "\\#.*$"
        }
      ]
    },
    "qas-keywords": {
      "patterns": [
        {
          "name": "keyword.control.untitled",
          "match": "\\b(object|field|schema|validation|permission|seed|wechat|callback|extension|do|end)\\b"
        }
      ]
    },
    "qas-boolean": {
      "patterns": [
        {
          "name": "keyword.control.untitled",
          "match": "(!@|@)\\w+"
        }
      ]
    },
    "qas-plus": {
      "patterns": [
        {
          "begin": "(\\+[^\\(|\\s]+\\()",
          "beginCaptures": {
            "1": {
              "name": "entity.name.tag"
            }
          },
          "end": "(\\))",
          "endCaptures": {
            "1": {
              "name": "entity.name.tag"
            }
          },
          "patterns": [
            {
              "include": "#qas-comments"
            },
            {
              "include": "#qas-at"
            },
            {
              "include": "#qas-boolean"
            },
            {
              "include": "#qas-code-block"
            },
            {
              "include": "#qas-text"
            },
            {
              "include": "#qas-unsign-text"
            }
          ]
        }
      ]
    },
    "qas-at": {
      "patterns": [
        {
          "begin": "(@[^\\(|\\s]+\\()",
          "beginCaptures": {
            "1": {
              "name": "entity.name.type"
            }
          },
          "end": "(\\))",
          "endCaptures": {
            "1": {
              "name": "entity.name.type"
            }
          },
          "patterns": [
            {
              "include": "#qas-comments"
            },
            {
              "include": "#qas-at"
            },
            {
              "include": "#qas-boolean"
            },
            {
              "include": "#qas-code-block"
            },
            {
              "include": "#qas-text"
            },
            {
              "include": "#qas-unsign-text"
            }
          ]
        }
      ]
    },
    "qas-unsign-text": {
      "patterns": [
        {
          "name": "constant.character.escape.untitled",
          "match": "\\w+"
        }
      ]
    },
    "qas-text": {
      "name": "string.quoted.single.untitled",
      "begin": "`",
      "end": "`",
      "patterns": [
        {
          "name": "constant.character.escape.untitled",
          "match": "\\\\."
        }
      ]
    },
    "qas-code-block": {
      "begin": "```",
      "end": "```",
      "patterns": [
        {
          "contentName": "meta.embedded.block.elixir",
          "patterns": [
            {
              "include": "source.elixir"
            }
          ]
        }
      ]
    }
  },
  "scopeName": "source.qas"
}
